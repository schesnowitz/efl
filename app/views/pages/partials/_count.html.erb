
<section class="py-7 text-center" data-zanim-timeline="{}" data-zanim-trigger="scroll">
  <div class="bg-holder overlay" style="background-image">
    <%= image_tag(@page.three_k_eight_eleven) if @page.image.attached? %>
  </div>
  <!--/.bg-holder-->
  <div class="container">
    <div class="row mb-4">
      <div class="col">
        <div class="overflow-hidden">
          <h2 class="fs-sm-5 text-white mb-1 mb-lg-2" data-zanim-xs='{"duration":1.5,"delay":0}'><%= @page.count_text1 %></h2>
        </div>
        <div class="overflow-hidden">
          <p class="fs--1 text-uppercase text-white ls-0 mb-0" data-zanim-xs='{"duration":1.5,"delay":0.1}'><%= @page.count_text2 %></p>
        </div>
        <div class="overflow-hidden">
          <hr class="hr-short border-white" data-zanim-xs='{"duration":1.5,"delay":0.2}' />
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="row">
          <div class="col-md-4 mb-4 mb-lg-0">
            <div class="overflow-hidden"><img class="fun-fact-icon mb-2" src="../assets/img/line-icons/icons/download.svg" alt="" /></div>
            <div class="overflow-hidden">
              <h3 class="text-white text-base font-weight-normal mb-1" data-countup='{"count":<%= @page.count_num1 %>}'>0</h3>
            </div>
            <div class="overflow-hidden">
              <p class="text-uppercase text-white font-weight-semi-bold ls-1 mb-0"><%= @page.count_text3%></p>
            </div>
          </div>
          <div class="col-md-4 mb-4 mb-lg-0">
            <div class="overflow-hidden"><img class="fun-fact-icon mb-2" src="../assets/img/line-icons/icons/clock.svg" alt="" /></div>
            <div class="overflow-hidden">
              <h3 class="text-white text-base font-weight-normal mb-1" data-countup='{"count":<%= @page.count_num2 %>}'>0</h3>
            </div>
            <div class="overflow-hidden">
              <p class="text-uppercase text-white font-weight-semi-bold ls-1 mb-0"><%= @page.count_text4 %></p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="overflow-hidden"><img class="fun-fact-icon mb-2" src="../assets/img/line-icons/icons/battery.svg" alt="" /></div>
            <div class="overflow-hidden">
              <h3 class="text-white text-base font-weight-normal mb-1" data-countup='{"count":<%= @page.count_num3 %>}'>0</h3>
            </div>
            <div class="overflow-hidden">
              <p class="text-uppercase text-white font-weight-semi-bold ls-1 mb-0"><%= @page.count_text5 %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= link_to "Edit", edit_count_path, class: "btn btn-outline-info btn-lg pull-right" %> 
  </div>
  <!-- end of .container-->
</section>